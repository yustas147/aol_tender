<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <record model="ir.ui.view" id="aol_crm_case_form_view_inh">
            <field name="name">aol.crm.case.form.view.inh</field>
            <field name="model">crm.lead</field>
            <field name="inherit_id" ref="crm.crm_case_form_view_leads"/>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='fax']" position='replace'/>
                <xpath expr="//sheet/group/group" position='before'>
                    <field name="is_risk"/>
                </xpath>
                <xpath expr="//sheet/group/group" position="attributes">
                    <attribute name="attrs">{'invisible':[('is_risk','=',True)]}</attribute>
                </xpath>
                <field name='partner_id' position='replace'/>
                <xpath expr="//field[@name='contact_name']" position='after'>
                    <div>
                        <label for="partner_id" attrs="{'invisible': [('is_risk','=',True)]}"/>
                        <label for="partner_id" string='Asset' attrs="{'invisible': [('is_risk','=',False)]}"/>
                        <field name='partner_id' />
                    </div>
                </xpath>
                <!--<field name='partner_id' position='attributes'>-->
                    <!--<attribute name='string'>'Asset'</attribute>-->
                <!--</field>-->
                <!--<xpath expr="//field[@name='partner_name']" position='before'>-->
                    <!--<field name="is_risk"/>-->
                <!--</xpath>-->
                <!--<field name='mobile' position='after'>-->
                    <!--<field name="fax" attrs='{"invisible":[("is_risk","=",True)]}'/>-->
                <!--</field>-->
                <!--<field name='partner_id' position='replace'/>-->
                <!--<field name='partner_id' position='before'>-->
                    <!--<label for='partner_id' string='Asset' attrs="{'invisible':[('is_risk','=',False)]}"/>-->
                <!--</field>-->
            </field>
        </record>
    </data>
</openerp>
